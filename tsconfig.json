{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "services/*":["services/*"],
      "utils/*":["utils/*"]
    }
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}